{
  "arrowParens": "always",
  "bracketSpacing": false,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "jsxBracketSameLine": false,
  "jsxSingleQuote": false,
  "printWidth": 80,
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "vueIndentScriptAndStyle": false,
  "overrides": [
    {
      "files": ["package.json", "package-lock.json", "*.md"],
      "options": {
        "printWidth": 80,
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "none",
        "useTabs": false,
        "proseWrap": "always"
      }
    },
    {
      "files": [".prettierrc.json", ".stylelintrc.json"],
      "options": {
        "proseWrap": "never",
        "trailingComma": "none"
      }
    }
  ]
}

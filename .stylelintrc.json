{
  "extends": [
    "stylelint-prettier/recommended"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-config-rational-order/plugin"
  ],
  "ignoreFiles": [
    "**/*.gz",
    "*.json",
    "**/*.log",
    "**/*.txt",
    "**/*.css",
    "test/*.*"
  ],
  "rules": {
    "prettier/prettier": true,
    "order/order": [
      "dollar-variables"
    ],
    "order/properties-order": [
      "position"
    ],
    "plugin/rational-order": [
      true,
      {
        "border-in-box-model": false,
        "empty-line-between-groups": false
      }
    ]
  }
}

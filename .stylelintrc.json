{
  "extends": [
    "stylelint-prettier/recommended"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "ignoreFiles": [
    "**/*.gz",
    "*.json",
    "**/*.log",
    "**/*.txt"
  ],
  "rules": {
    "number-leading-zero": true,
    "prettier/prettier": true,
    "order/order": [
      "custom-properties",
      "dollar-variables",
      "declarations",
      "at-rules",
      "rules"
    ]
  }
}
